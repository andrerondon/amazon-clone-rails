<div class='shadow-sm p-3 mb-5 bg-white rounded overflow-wrap'>
  <h1>
    <span class='badge badge-pill badge-info'>
      <%= @product.id %>
    </span>
    <%= @product.title %>
    </span>
    <%= @product.description %>
    </span>
    <%= @product.price %>
  </h1>
  <p class='shadow-none p-3 mb-5 bg-light rounded'><%= @product.title %></p>
  <h1>$<%= @product.price %></h1>

  <%# link_to arguments: name, path, options_object %>
  <div>
    <%= link_to(
      "Edit",
      edit_product_path(@product),
      class: 'btn btn-info'
    )
    %>
    <%= link_to(
      "Delete",
      product_path(@product),
      method: :delete,
      class: 'btn btn-danger',
      data: { confirm: 'are you sure?' }
    )
    %>
  </div>


  <%= form_with(model: [@product, @review], local: true) do |f| %>
    <% if @review.errors.present? %>
      <p>
        <%= @review.errors.full_messages.join(', ') %>
      </p>
    <% end %>
    <div>
      <%= f.label :rating %>
      <%= f.number_field :rating %>
    </div>
    <div>
      <%= f.label :body %>
      <%= f.text_area :body %>
    </div>
    <%= f.submit %>
  <% end %>